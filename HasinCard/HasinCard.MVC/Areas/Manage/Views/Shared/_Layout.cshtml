<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>@ViewData["Title"] - 自动发卡平台</title>

    <!-- Bootstrap -->
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/bootstrap-treeview/1.2.0/bootstrap-treeview.min.css" rel="stylesheet">

    <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">
                    HaSin自动发卡平台
                </a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li class="liBackground"><a>欢迎你,<span class="spName"></span></a></li>
                <li class="liLogout"><a href="#" class="alogout">退出</a></li>
            </ul>
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2" style="padding-left:0px;">
                <div id="tree" style="margin-top:52px;"></div>
            </div>
        </div>
    </div>
    @RenderBody()

    <!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
    <script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
    <!-- 加载 Bootstrap 的所有 JavaScript 插件。你也可以根据需要只加载单个插件。 -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap-treeview/1.2.0/bootstrap-treeview.min.js"></script>
    <script src="~/js/node_modules/oidc-client/dist/oidc-client.min.js"></script>
    <script type="text/javascript">
        var config = {
            authority: "http://www.hasin.top",
            client_id: "js",
            redirect_uri: 'http://localhost:7762/SignCallBack',
            response_type: "id_token token",
            scope: "openid profile apihost",
            post_logout_redirect_uri: 'http://localhost:7762/Home'
        };
        var mgr = new Oidc.UserManager(config);
    </script>
    <script type="text/javascript">
        $(".alogout").on("click", function () {
            mgr.signoutRedirect();
        });

        $(function () {

            var storage = window.localStorage;

            if (!storage["name"]) {

                mgr.getUser().then(function (user) {

                    $.ajax({
                        type: "GET",
                        url: "http://localhost:11415/api/SysUser/" + user.profile.sub,
                        beforeSend: function (request) {
                            request.setRequestHeader("Authorization", "Bearer " + user.access_token);
                        },
                        success: function (result) {
                            if (result) {
                                storage["id"] = result.data.id;
                                storage["email"] = result.data.email;
                                storage["name"] = result.data.name;
                            }
                        }
                    });

                });
            }

            $(".spName").text(storage["name"]);


            var tree = [
                {
                    text: "Parent 1"
                },
                {
                    text: "Parent 2"
                },
                {
                    text: "Parent 3"
                },
                {
                    text: "Parent 4"
                },
                {
                    text: "Parent 5"
                }
            ];

            $('#tree').treeview({ data: tree});
        });

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>